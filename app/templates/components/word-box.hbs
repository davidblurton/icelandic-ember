<div class="Word">
  <p>{{word.type}}
    <span class="Word-headWord">{{word.wordForm}}</span>
    {{translate-helper 'wordClass' word.wordClass}}
  </p>

  <ul>
  {{#each tag in (each-keys word.tags)}}
    <li> {{tag}}:
    {{#each pair in (to-array tag word.tags)}}

      {{#if pair.value}}
        <span class="Word-link Word-link--selected">{{translate-helper 'grammarTag' pair.key}}</span>
      {{else}}
        <a href="javascript:;" class="Word-link" {{action 'click' tag pair.key}}>
          {{translate-helper 'grammarTag' pair.key}}
        </a>
      {{/if}}

    {{/each}}
    </li>
  {{/each}}
  </ul>
</div>

{{!--format-json word--}}
